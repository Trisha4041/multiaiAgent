{
  "manifest_version": 3,
  "name": "Chrome History Viewer",
  "version": "1.0",
  "description": "A Chrome extension to view and export browser history",
  "permissions": ["history", "storage"],
  "background": {
    "service_worker": "src/background.js"
  },
  "action": {
    "default_popup": "src/popup.html"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
